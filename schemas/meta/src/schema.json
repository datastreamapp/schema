{
  "type": "object",
  "properties": {
    "ID": {
      "title": "Dataset ID",
      "type": "string",
      "format": "uuid"
    },
    "Version": {
      "title": "Version",
      "description": "semver format",
      "type": "string",
      "pattern": "[0-9]+.[0-9]+.[0-9]+"
    },
    "Name": {
      "title": "Dataset Name",
      "description": "",
      "type": "string"
    },
    "Abstract": {
      "type": "string"
    },
    "Keywords": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "Licence": {
      "type": "string",
      "enum": ["odc-by", "odc-pddl", "ogl"]
    },
    "Disclaimer": {
      "description": "Any additional disclaimer text regarding the data that is not covered in data licence",
      "type": "string"
    },
    "MaintenanceFrequencyCode": {
      "description": "ISO 19115 MD_MaintenanceFrequencyCode: frequency with which modifications and deletions are made to the data after it is first produced",
      "type": "string",
      "enum": [
        "continual",
        "daily",
        "weekly",
        "fortnightly",
        "monthly",
        "quarterly",
        "biannually",
        "annually",
        "asNeeded",
        "irregular",
        "notPlanned",
        "unknown"
      ]
    },
    "ProgressCode": {
      "description": "ISO 19115 MD_ProgressCode: status of the dataset or progress of a review",
      "type": "string",
      "enum": [
        "completed",
        "historicalArchive",
        "obsolete",
        "onGoing",
        "planned",
        "required",
        "underDevelopment",
        "final",
        "pending",
        "retired",
        "superseded",
        "tentative",
        "valid",
        "accepted",
        "notAccepted",
        "withdrawn",
        "proposed",
        "deprecated"
      ]
    },
    "TopicCategoryCode": {
      "description": "ISO 19115 MD_TopicCategoryCode: high-level geographic data thematic classification to assist in the grouping and search of available geographic data sets. Can be used to group keywords as well. Listed examples are not exhaustive.",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["climatologyMeteorologyAtmosphere", "inlandWaters", "oceans"]
      },
      "minItems": 1
    },
    "Citation": {
      "description": "Default: {Organization}. {Publication Year}. \"{Dataset Name}\" (dataset). {Version}. DataStream. {DOI}.",
      "type": ["null", "string"],
      "default": null
    },
    "DOI": {
      "description": "Digital Object Identifier from DataCite",
      "type": "string",
      "format": "uri"
    },
    "TemporalExtent": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "datetime"
      },
      "minItems": 2,
      "maxItems": 2
    },
    "SpatialExtent": {
      "type": "array",
      "items": [
        {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        },
        {
          "type": "number",
          "minimum": -180,
          "maximum": 180
        },
        {
          "type": "number",
          "minimum": -90,
          "maximum": 90
        }
      ],
      "minItems": 4,
      "maxItems": 4
    },
    "VerticalExtent": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2
    }
  },
  "required": ["Name", "Abstract", "TopicCategoryCode"]
}
