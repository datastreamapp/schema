{
  "errorMessage": "ActivityType of group Sample requires LaboratoryName with ResultAnalyticalMethod Name or ID & Context",
  "if": {
    "properties": {
      "ActivityType": {
        "pattern": "^Sample.*$"
      }
    },
    "required": ["ActivityType"]
  },
  "then": {
    "anyOf": [
      {
        "dependencies": {
          "ActivityType": [
            "LaboratoryName",
            "ResultAnalyticalMethodID",
            "ResultAnalyticalMethodContext"
          ],
          "ResultAnalyticalMethodID": ["ResultAnalyticalMethodContext"],
          "ResultAnalyticalMethodContext": ["ResultAnalyticalMethodID"]
        }
      },
      {
        "dependencies": {
          "ActivityType": ["LaboratoryName", "ResultAnalyticalMethodName"]
        }
      }
    ]
  }
}
