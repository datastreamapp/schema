{
  "$id": "https://datastream.org/schema",
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "DataStream Quality Control",
  "description": "Quality Control Checks for a single observation",
  "type": "object",
  "properties": {
    "DatasetName": {
      "type": "string"
    },
    "MonitoringLocationID": {
      "type": "string"
    },
    "MonitoringLocationName": {
      "type": "string"
    },
    "MonitoringLocationLatitude": {
      "type": "number"
    },
    "MonitoringLocationLongitude": {
      "type": "number"
    },
    "MonitoringLocationHorizontalCoordinateReferenceSystem": {
      "type": "string"
    },
    "MonitoringLocationHorizontalAccuracyMeasure": {
      "type": "number"
    },
    "MonitoringLocationHorizontalAccuracyUnit": {
      "type": "string"
    },
    "MonitoringLocationVerticalMeasure": {
      "type": "number"
    },
    "MonitoringLocationVerticalUnit": {
      "type": "string"
    },
    "MonitoringLocationType": {
      "type": "string"
    },
    "ActivityType": {
      "type": "string"
    },
    "ActivityMediaName": {
      "type": "string"
    },
    "ActivityStartDate": {
      "type": "string"
    },
    "ActivityStartTime": {
      "type": "string",
      "$ref": "./definitions.json#/columns/ActivityStartTime"
    },
    "ActivityEndDate": {
      "type": "string"
    },
    "ActivityEndTime": {
      "type": "string",
      "$ref": "./definitions.json#/columns/ActivityEndTime"
    },
    "ActivityDepthHeightMeasure": {
      "type": "number"
    },
    "ActivityDepthHeightUnit": {
      "type": "string"
    },
    "SampleCollectionEquipmentName": {
      "type": "string"
    },
    "CharacteristicName": {
      "type": "string"
    },
    "MethodSpeciation": {
      "type": "string"
    },
    "ResultSampleFraction": {
      "type": "string"
    },
    "ResultValue": {
      "type": "number"
    },
    "ResultUnit": {
      "type": "string"
    },
    "ResultValueType": {
      "type": "string"
    },
    "ResultDetectionCondition": {
      "type": "string"
    },
    "ResultDetectionQuantitationLimitMeasure": {
      "type": "number"
    },
    "ResultDetectionQuantitationLimitUnit": {
      "type": "string"
    },
    "ResultDetectionQuantitationLimitType": {
      "type": "string"
    },
    "ResultStatusID": {
      "type": "string"
    },
    "ResultComment": {
      "type": "string"
    },
    "ResultAnalyticalMethodID": {
      "type": "string"
    },
    "ResultAnalyticalMethodContext": {
      "type": "string"
    },
    "ResultAnalyticalMethodName": {
      "type": "string"
    },
    "AnalysisStartDate": {
      "type": "string"
    },
    "AnalysisStartTime": {
      "type": "string",
      "$ref": "./definitions.json#/columns/AnalysisStartTime"
    },
    "AnalysisStartTimeZone": {
      "errorMessage": {
        "enum": "Does not match the allowed Canadian time zones (-02:30 to -08:00)"
      },
      "type": "string",
      "enum": [
        "-02:30",
        "-03:00",
        "-03:30",
        "-04:00",
        "-05:00",
        "-06:00",
        "-07:00",
        "-08:00"
      ]
    },
    "LaboratoryName": {
      "type": "string"
    },
    "LaboratorySampleID": {
      "type": "string"
    }
  },
  "allOf": [
    {
      "$ref": "./quality-control/ActivityType-ResultSampleFraction.json"
    },
    {
      "$ref": "./quality-control/CharacteristicName-MethodSpeciation.json"
    },
    {
      "$ref": "./quality-control/ResultDetectionQuantitationLimitMeasure-Minimum.json"
    },
    {
      "$ref": "./quality-control/ResultDetectionQuantitationLimitUnit-None.json"
    },
    {
      "$ref": "./quality-control/ResultDetectionQuantitationLimitUnit-NoValue.json"
    },
    {
      "$ref": "./quality-control/ResultUnit-None.json"
    },
    {
      "$ref": "./quality-control/ResultUnit-NoValue.json"
    },
    {
      "$ref": "./quality-control/ResultValue-DOSatMinimum.json"
    },
    {
      "$ref": "./quality-control/ResultValue-DissolvedOxygenUnit.json"
    },
    {
      "$ref": "./quality-control/ResultValue-Minimum.json"
    },
    {
      "$ref": "./quality-control/ResultValue-pHRange.json"
    },
    {
      "$ref": "./quality-control/ResultValue-TemperatureRange.json"
    },
    {
      "$ref": "./quality-control/WhiteSpace.json"
    }
  ]
}
