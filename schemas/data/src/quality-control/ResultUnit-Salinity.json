{
  "$id": "https://datastream.org/data-schema/quality-control/ResultUnit-Elevation.json",
  "title": "ResultUnit-Salinity",
  "description": "ResultUnit that require special unit notation.",
  "errorMessage": "The unit for the CharacteristicName ResultUnit should not be ppt.",
  "if": {
    "properties": {
      "CharacteristicName": {
        "enum": [
          "Salinity"
        ]
      }
    },
    "required": ["CharacteristicName", "ResultUnit"]
  },
  "then": {
    "properties": {
      "ResultUnit": {
        "enum": ["ppth","ppm"]
      }
    },
    "required": ["ResultUnit"]
  }
}
