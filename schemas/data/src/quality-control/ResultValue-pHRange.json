{
  "title": "pH Range",
  "description": "pH values cannot be less than zero or greater than 14.",
  "errorMessage": "pH ResultValue is outside the accepted allowed range (0 to 14)",
  "if": {
    "properties": {
      "CharacteristicName": {
        "enum": ["pH", 
                 "pH, lab",
                 "pH, saturated"
        ]
      }
    },
    "required": ["CharacteristicName", "ResultValue"]
  },
  "then": {
    "properties": {
      "ResultValue": {
        "minimum": 0,
        "maximum": 14
      },
      "ResultUnit": {
        "enum": ["None"]
      }
    },
    "required": ["ResultValue"]
  }
}
