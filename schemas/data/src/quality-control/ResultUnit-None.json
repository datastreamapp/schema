{
  "$id": "https://datastream.org/data-schema/quality-control/ResultUnit-None.json",
  "title": "ResultUnit-None",
  "description": "Characteristics that require None as unit.",
  "errorMessage": "The unit for the CharacteristicName should be None",
  "if": {
    "properties": {
      "CharacteristicName": {
        "enum": ["pH", "pH, lab", "pH, saturated", "Langelier Saturation Index"]
      }
    },
    "required": ["CharacteristicName", "ResultValue"]
  },
  "then": {
    "properties": {
      "ResultUnit": {
        "enum": ["None"]
      }
    },
    "required": ["ResultUnit"]
  }
}
